<html>
  <head>
    <meta charset="utf-8">
    <title>Airsausages home</title>


    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- Leave those next 4 lines if you care about users using IE8 -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>
    <!-- Your banner code -->
    <div class="banner" style="background-image: linear-gradient(-225deg, rgba(249,121,121,0.6) 0%, rgba(142,46,0,0.6) 50%), url('images/banner.jpeg');">
      <div class="banner-content">
      <h1>Saucisse</h1>
        <p>All you need to know about sausages with personnal training</p>
        <form class="form-inline padded-side">
          <div class="form-group ">
            <input type="date" class="form-control input-lg" placeholder="Check-in">
          </div>
          <div class="form-group ">
            <input type="date" class="form-control input-lg" placeholder="Check-out">
          </div>
          <select class="form-control input-lg">
            <option value="1">Newbie</option>
            <option value="2">Amateur</option>
            <option value="3">Conoisseur</option>
          </select>
           <a class="btn btn-danger btn-lg">YUM YUM</a>
        </form>
      </div>
    </div>
    <!-- Your features code -->
    <div class="wrapper bg-yellow">
      <div class="container padded">
        <div class="row centered">
          <div class="col-sm-3">
            <div class="feature">
            <img src="images/chef.png" class="icon" alt="">
            <h3>Easy to cook</h3>
            <p>Feel like a true chef</p>
          </div>
          </div>
          <div class="col-sm-3">
            <div class="feature">
            <img src="images/hotdog.png" class="icon" alt="">
            <h3>Take it everywhere</h3>
            <p>What is better than a hot-dog ?</p>
          </div>
          </div>
          <div class="col-sm-3">
            <div class="feature">
            <img src="images/meal.png" class="icon" alt="">
            <h3>Perfect for every meal</h3>
            <p>It's always saucisse hour</p>
          </div>
          </div>
          <div class="col-sm-3">
            <div class="feature">
            <img src="images/happy.png" class="icon" alt="">
            <h3>Makes you happy</h3>
            <p>And you can share !</p>
          </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Your cards code -->
    <div class="bg-graylighter padded">
      <div class="container">
         <h2 class="centered tx-red">Become a true sausage lover</h2>
        <div class="row">
          <% data.guides.each do |coach, guide| %>
          <div class="col-xs-12 col-sm-4">
            <div class="card" style="background-image: url('<%= image_path guide.picture %>');">
              <div class="card-category"><%= guide.city %></div>
              <div class="card-description">
                <h2><%= guide.name %></h2>
                <p><%= guide.summary %></p>
              </div>
              <%= image_tag guide.coach_picture, class:"card-user avatar avatar-large" %>
              <%= link_to "#", "guides/#{coach}.html", class: "card-link" %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
    <!-- Your newsletter code -->
    <div class="bg-orange padded">
      <div class="container centered">
        <h2 class="tx-brown">Get news about sausages</h2>
        <p>Leave us your email and get news from us</p>
        <form class="form-inline">
          <div class="form-group ">
            <input type="text" class="form-control" placeholder="Your email (email@domain.com)">
          </div>
          <button type="submit" class="btn btn-info">Subscribe</button>
        </form>
      </div>
    </div>
    <!-- Your map code -->
    <div id="map" style="width: 100%; height: 400px;"></div>

    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js"></script>

    <script type="text/javascript">
    var myLatlng = new google.maps.LatLng(48.852937,2.364178);

    var myOptions = {
      zoom: 16,
      center: myLatlng,
      scrollwheel: false,
      mapTypeId: google.maps.MapTypeId.ROADMAP,
      styles: [{"featureType":"landscape","elementType":"all","stylers":[{"hue":"#ffbb00"},{"lightness":-32},{"saturation":100},{"weight":3}]},{"featureType":"poi","elementType":"all","stylers":[{"visibility":"off"}]},{"featureType":"road","elementType":"geometry.fill","stylers":[{"saturation":100},{"hue":"#ffe500"},{"lightness":-13}]},{"featureType":"road","elementType":"geometry.stroke","stylers":[{"hue":"#ff0000"},{"saturation":100},{"lightness":-50},{"visibility":"off"}]},{"featureType":"transit","elementType":"all","stylers":[{"visibility":"off"}]}] // TODO: replace [] by array from https://snazzymaps.com/
    };

    var map = new google.maps.Map(document.getElementById('map'), myOptions);
    var marker = new google.maps.Marker({
      position: myLatlng,
      map: map,
      title: "You are here!"
    });
    </script>
    <!-- Your footer code -->

    <!-- Including Bootstrap JS (with its jQuery dependency) so that dynamic components work -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  </body>
</html>
